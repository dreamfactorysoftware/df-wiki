# Production environment variables for docker-compose.production.yml
# Copy this file to .env and fill in real values before deploying.
#
#   cp .env.example .env

# --- MySQL ---
# Root password for the MySQL container
MYSQL_ROOT_PASSWORD=CHANGE_ME

# MediaWiki database name, user, and password
MW_DB_NAME=wiki_production
MW_DB_USER=wiki_user
MW_DB_PASSWORD=CHANGE_ME

# --- MediaWiki secrets ---
# Generate with: openssl rand -hex 32
MW_SECRET_KEY=CHANGE_ME

# Generate with: openssl rand -hex 8
MW_UPGRADE_KEY=CHANGE_ME

# --- Networking ---
# Host port the wiki is exposed on (reverse proxy connects here)
WIKI_PORT=8080
